<!--
File: robot.xml (first section) and env.xml (second section) combined in one document.
Save the first section as "robot.xml" and the second as "env.xml" in the same folder.
This MJCF model targets MuJoCo 2.x (e.g., mujoco>=2.3). It defines a two-wheeled differential robot
with an inverted pendulum body, motors on wheels (torque actuators), joint sensors, and useful body/geoms.
-->

<!-- ========================= robot.xml ========================= -->
<mujoco>
  <compiler angle="radian"/>

  <option gravity="0 0 -9.81">
    <flag contact="enable"/>
  </option>

  <default>
    <joint damping="0.1"/>
    <geom contype="1"
          conaffinity="1"
          friction="1.0 0.01 0.01"
          rgba="0.6 0.6 0.6 1"/>
  </default>

  <asset>
    <texture type="2d" name="groundplane" builtin="checker" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" width="500" height="500"/>
    <material name="ground" texture="groundplane" texrepeat="1 1" reflectance="0.2"/>
    
    <texture type="2d" name="wheel_texture" builtin="checker" mark="edge" rgb1="0.0 0.0 0.0" rgb2="1 1 1"
      markrgb="0.3 0.3 0.3" width="300" height="300"/>
    <material name="wheel_material" texture="wheel_texture" texuniform="true" texrepeat="5 5"/>
  </asset>

  <worldbody>
    <light pos="0 0 3" dir="0 0 -1" diffuse="0.8 0.8 0.8" specular="0.2 0.2 0.2"/>
    
    <geom name="floor" 
          type="plane" 
          size="5 5 0.1" 
          material="ground" 
          rgba="1 1 1 1"
          contype="1" 
          conaffinity="1"/>

    <body name="chassis" pos="0 0 0.05">
      <joint type="free" name="root"/>
      <inertial pos="0 0.0 0.057" quat="0.707107 0 0 0.707107" mass="0.25" diaginertia="0.001311 0.0012568 0.000487"/>

      
      <geom type="capsule" fromto="0 0 0 0 0 0.2" size="0.05" rgba="0.8 0.2 0.2 1"/>
      <site name="chassis_top" pos="0 0 0.2"/> 
      
      <body name="left_wheel" pos="0 0.08 0">
        <joint type="hinge" name="left_wheel_joint" axis="0 1 0" limited="false"/>
        <geom type="cylinder" size="0.05 0.02" zaxis="0 1 0" material="wheel_material"/>
      </body>

      <body name="right_wheel" pos="0 -0.08 0">
        <joint type="hinge" name="right_wheel_joint" axis="0 1 0" limited="false"/>
        <geom type="cylinder" size="0.05 0.02" zaxis="0 1 0" material="wheel_material"/>
      </body>
    </body>

  </worldbody>

  <actuator>
    <motor name="left_motor" 
           joint="left_wheel_joint" 
           gear="1" 
           ctrlrange="-1.0 1.0" 
           forcerange="-5.0 5.0"/>
    <motor name="right_motor" 
           joint="right_wheel_joint" 
           gear="1" 
           ctrlrange="-1.0 1.0" 
           forcerange="-5.0 5.0"/>
  </actuator>

  <sensor>
    <framepos objtype="site" objname="chassis_top"/>
    <framequat objtype="body" objname="chassis"/>
    <framelinvel objtype="body" objname="chassis"/>
    <frameangvel name="chassis_angle" objtype="body" objname="chassis"/>
    <jointpos joint="left_wheel_joint"/>
    <jointpos joint="right_wheel_joint"/>
  </sensor>

</mujoco>